<Window x:Class="MazyrTz.ui.windows.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MazyrTz.ui.windows"
        mc:Ignorable="d"
        Title="RegWindow" Height="450" Width="420">
    <Grid>
        <TextBox 
            HorizontalAlignment="Left" 
            Width="250"
            TextWrapping="Wrap" Text=""
            materialDesign:HintAssist.Hint="Email"
            VerticalAlignment="Top" 
            Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="80,120,0,0"/>
        <PasswordBox 
            HorizontalAlignment="Left" 
            Margin="80,195,0,0" VerticalAlignment="Top" 
            Width="250"
            materialDesign:HintAssist.Hint="Password"
            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
        <Label 
            x:Name="LabelName"
            Content="Регистрация"
            FontSize="32"
            HorizontalAlignment="Left" 
            Margin="100,19,0,0" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignLabel}" FontWeight="Bold"/>

        <Button
            x:Name="Reg_btn"
            Content="Зарегестрироваться"
            HorizontalAlignment="Left"
            Margin="80,285,0,0" 
            VerticalAlignment="Top"
            Padding="10,5"
            Width="250"
            Height="50" 
            Style="{StaticResource MaterialDesignRaisedButton}"
            />
        
    </Grid>
</Window>
