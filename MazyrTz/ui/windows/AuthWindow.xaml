<Window x:Class="MazyrTz.ui.windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MazyrTz.ui.windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="500" Width="900">
    <Grid>
        <TextBox 
            HorizontalAlignment="Left" 
            Width="250"
            TextWrapping="Wrap" Text=""
            materialDesign:HintAssist.Hint="Email"
            VerticalAlignment="Top" 
            Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="550,125,0,0"/>
        <PasswordBox 
            HorizontalAlignment="Left" 
            Margin="550,195,0,0" VerticalAlignment="Top" 
            Width="250"
            materialDesign:HintAssist.Hint="Password"
            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
        <Label 
            Content="Авторизация"
            FontSize="32"
            HorizontalAlignment="Left" 
            Margin="576,29,0,0" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignLabel}"/>

        <Button 
            Content="Войти"
            HorizontalAlignment="Left"
            Margin="550,265,0,0" 
            VerticalAlignment="Top"
            Padding="10,5"
            Width="250"
            Height="50" 
            Style="{StaticResource MaterialDesignRaisedButton}"
            />


        <TextBlock 
            HorizontalAlignment="Left"
            FontSize="12"
            
            Margin="620,340,0,0" 
            TextWrapping="Wrap"
            Text="Зарегестрироваться" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignBody2TextBlock}" Foreground="#FF5F5D5D"/>
        <Rectangle Fill="#FF673AB7" HorizontalAlignment="Left" Height="470" Stroke="Black" VerticalAlignment="Top" Width="480" Margin="0,0,0,-1"/>

    </Grid>
</Window>
