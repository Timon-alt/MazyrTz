<Window x:Class="MazyrTz.ui.windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MazyrTz.ui.windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="500" Width="900">
    <Grid>
        <TextBox 
            HorizontalAlignment="Left" 
            Width="250"
            TextWrapping="Wrap" Text=""
            materialDesign:HintAssist.Hint="Email"
            VerticalAlignment="Top" 
            Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="300,150,0,0"/>
        <PasswordBox 
            HorizontalAlignment="Left" 
            Margin="300,215,0,0" VerticalAlignment="Top" 
            Width="250"
            materialDesign:HintAssist.Hint="Password"
            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
        <Label 
            Content="Авторизация"
            FontSize="32"
            HorizontalAlignment="Left" 
            Margin="331,30,0,0" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignLabel}"/>
        
            <Button 
            Content="Войти"
            HorizontalAlignment="Left"
            Margin="300,285,0,0" 
            VerticalAlignment="Top"
            Padding="10,5"
            Width="250"
            Height="50" 
            Style="{StaticResource MaterialDesignRaisedButton}"
            />
        
        
        <TextBlock 
            HorizontalAlignment="Left"
            FontSize="12"
            
            Margin="370,355,0,0" 
            TextWrapping="Wrap"
            Text="Зарегестрироваться" 
            VerticalAlignment="Top"
            Style="{StaticResource MaterialDesignBody2TextBlock}" Foreground="#FF5F5D5D"/>

    </Grid>
</Window>
