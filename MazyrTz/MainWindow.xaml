<Window x:Class="MazyrTz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazyrTz"
        mc:Ignorable="d"
      
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <!-- Определение колонок -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <!-- Боковое меню -->
            <ColumnDefinition Width="*" />
            <!-- Основное содержимое -->
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <StackPanel Grid.Column="0" Background="LightGray">
            <Button Content="Налог" Margin="10" Click="NavigateToPage1" />
            <Button Content="График" Margin="10" Click="NavigateToPage2" />
            <Button Content="Сырьё" Margin="10" Click="NavigateToPage3" />
        </StackPanel>

        <!-- Основное содержимое -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
    
</Window>
